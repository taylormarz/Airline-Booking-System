<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ListView?>

<Pane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example._2130asn2_gurney_martin_sylvester.Amanda_Taylor_Ethan_PrintManifestController">
    <!-- Include the nav bar/ user profile bar-->
    <fx:include source="navbar-view.fxml" />
    <fx:include source="userbar-view.fxml"/>

    <!-- Background Image-->
    <ImageView fitWidth="625.0" fitHeight="800.0" layoutX="625.0">
        <Image url="@img/gradientIMG.png"/>
    </ImageView>

    <!-- Heading 1-->
    <Label text="Print Flight Manifest" layoutX="675.0" layoutY="35.0">
        <font>
            <Font name="Arial" size="25.0"/>
        </font>
        <textFill>
            <Color fx:constant="WHITE"/>
        </textFill>
        <style>
            -fx-font-weight: bold;
        </style>
    </Label>

    <!--Label, text field, and button designs-->
    <Label fx:id="reviewFlightsLabel"/>
    <ListView fx:id="flightListView" layoutX="675.0" layoutY="150.0" prefWidth="300.0" prefHeight="150.0"/>

    <Label fx:id="enterFlightNumLabel"/>
    <TextField fx:id="flightIDField" promptText="Flight Number" layoutX="675.0" layoutY="350.0"
               prefWidth="300.0" prefHeight="40.0"/>

    <Button fx:id="printManifestButton" onAction="#printToManifest" text="Print Manifest" layoutX="675.0" layoutY="415.0"
            prefWidth="300.0" prefHeight="50.0" style="-fx-background-color: #e00034;
            -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 14;"/>

    <Label fx:id="manifestLabel"/>
    <ListView fx:id="manifestListView" layoutX="675.0" layoutY="525.0" prefWidth="300.0" prefHeight="150.0"/>
</Pane>